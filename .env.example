# ===== SERVER CONFIGURATION =====
SERVER_PORT=8080

# ===== SUPABASE DATABASE CONFIGURATION =====
# Example for Supabase Transaction Pooler (Port 6543)
SUPABASE_DB_URL=jdbc:postgresql://[YOUR_HOST]:6543/postgres?sslmode=require
SUPABASE_DB_USER=[YOUR_DB_USER]
SUPABASE_DB_PASSWORD=[YOUR_DB_PASSWORD]

# ===== JPA / HIBERNATE =====
# Options: update, create, create-drop, validate, none
HIBERNATE_DDL_AUTO=validate

# ===== JWT SECURITY CONFIGURATION =====
# Generate a secure key (HMAC-SHA256)
JWT_SECRET=[YOUR_BASE64_SECRET_KEY]
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# ===== LOGGING =====
# Options: DEBUG, INFO, WARN, ERROR
LOG_HIBERNATE_SQL=INFO
LOG_SPRING_JDBC=INFO
